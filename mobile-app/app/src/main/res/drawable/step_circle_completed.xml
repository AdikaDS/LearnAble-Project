<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lingkaran putih dengan border biru -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/>
            <stroke android:width="2dp" android:color="@color/blue_secondary"/>
        </shape>
    </item>

    <!-- Centang kecil di tengah -->
    <item
        android:drawable="@drawable/ic_checklist"
        android:top="5dp"
        android:bottom="5dp"
        android:start="5dp"
        android:end="5dp"
        android:gravity="center"/>
</layer-list>
