<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ON state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size
                android:height="20dp"
                android:width="46dp"/>
            <solid android:color="@color/green"/> <!-- Hijau -->
            <corners android:radius="16dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>

    <!-- OFF state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size
                android:height="20dp"
                android:width="46dp"/>
            <solid android:color="@color/text_hint"/> <!-- Abu -->
            <corners android:radius="16dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
</selector>
