<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema khusus untuk BottomSheet -->
    <style name="CustomBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomShapeBottomSheet</item>
    </style>

    <!-- Style untuk shape bottom sheet -->
    <style name="CustomShapeBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- Tema dialog yang transparan & diem-diem di tengah -->
    <style name="CenterDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <style name="ToolbarTitle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/ltsaeada_semibold</item>
    </style>

    <style name="GlobalPadding">
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">19dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="GlobalMargin">
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_marginBottom">19dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="MediaButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="MediaButtonContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MediaButtonIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="tint">@color/primary</item>
    </style>

    <style name="MediaButtonTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MediaButtonArrowStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>

    <style name="Theme.LearnAble.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearance.LearnAble.Dialog" parent="@style/ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Anim.Dialog.Zoom" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- New styles for student dashboard -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- ====== TextAppearance base + varian ====== -->
    <!-- BASE yang dicari AAPT -->
    <style name="TextAppearance.LearnAble" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/ltsaeada_regular</item>
    </style>

    <style name="TextAppearance.LearnAble.Regular" parent="TextAppearance.LearnAble">
        <item name="fontFamily">@font/ltsaeada_regular</item>
    </style>
    <style name="TextAppearance.LearnAble.SemiBold" parent="TextAppearance.LearnAble">
        <item name="fontFamily">@font/ltsaeada_semibold</item>
    </style>
    <style name="TextAppearance.LearnAble.Medium" parent="TextAppearance.LearnAble">
        <item name="fontFamily">@font/ltsaeada_medium</item>
    </style>

    <style name="TextAppearance.LearnAble.Light" parent="TextAppearance.LearnAble">
        <item name="fontFamily">@font/ltsaeada_light</item>
    </style>

    <!-- ====== Shape/Pill FAB ====== -->
    <!-- Base pill shape yang dicari AAPT -->
    <style name="Shape"/>
    <style name="Shape.Pill"/>
    <style name="Shape.Pill.FAB" parent="Shape.Pill">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Shape.Pill.FAB.Small" parent="Shape.Pill">
        <item name="cornerSize">28dp</item> <!-- ubah sesuai kebutuhan -->
    </style>


    <!-- Jika kamu memakai ShapeAppearance Material3 sebagai overlay -->
    <style name="ShapeAppearanceOverlay.LearnAble.Pill" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="Shape.Pill.ChipSmall">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item> <!-- biar bulat/oval -->
    </style>

    <style name="Shape.Pill.Chip">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">22dp</item> <!-- biar bulat/oval -->
    </style>

    <style name="Widget.LearnAble.ChipSmall.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Visual -->
        <item name="shapeAppearanceOverlay">@style/Shape.Pill.ChipSmall</item>
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="rippleColor">@color/chip_ripple</item>

        <!-- Teks -->
        <item name="android:textColor">@color/chip_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>

        <!-- Spasi & tinggi -->
        <item name="chipStartPadding">10dp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="ensureMinTouchTargetSize">false</item> <!-- biar nggak auto 48dp -->

        <!-- Bersih tanpa ikon -->
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="Widget.LearnAble.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Visual -->
        <item name="shapeAppearanceOverlay">@style/Shape.Pill.Chip</item>
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="rippleColor">@color/chip_ripple</item>

        <!-- Teks -->
        <item name="android:textColor">@color/chip_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>

        <!-- Spasi & tinggi -->
        <item name="chipStartPadding">10dp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="ensureMinTouchTargetSize">false</item> <!-- biar nggak auto 48dp -->

        <!-- Bersih tanpa ikon -->
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
    </style>


</resources>