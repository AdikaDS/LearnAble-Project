<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvQuestionText"
            style="@style/TextAppearance.LearnAble.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            tools:text="Gambar di atas memiliki berapa titik sudut?" />

        <ImageView
            android:id="@+id/ivAttachment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:contentDescription="Media pertanyaan"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:src="@drawable/icon_dummy_subject"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/essayAnswerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/stroke_card_quiz"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/tvEssayAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    tools:text="persegi panjang" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnCorrect"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_circle_green"
                    android:contentDescription="Benar"
                    android:src="@drawable/ic_checklist"
                    app:tint="@color/white" />

                <ImageButton
                    android:id="@+id/btnWrong"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_red"
                    android:contentDescription="Salah"
                    android:src="@drawable/ic_cross"
                    app:tint="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/optionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/option1Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="false"
                android:focusable="false"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/stroke_card_quiz"
                app:strokeWidth="1dp">

                <FrameLayout
                    android:id="@+id/option1Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvOption1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            tools:text="A. Pilihan 1" />

                        <ImageView
                            android:id="@+id/ivOption1Media"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="8dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/option1"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivOption1Correct"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_checklist"
                        android:visibility="gone"
                        app:tint="@color/green"
                        tools:visibility="visible" />
                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/option2Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="false"
                android:focusable="false"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/stroke_card_quiz"
                app:strokeWidth="1dp">

                <FrameLayout
                    android:id="@+id/option2Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvOption2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            tools:text="B. Pilihan 2" />

                        <ImageView
                            android:id="@+id/ivOption2Media"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="8dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/option2"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivOption2Correct"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_checklist"
                        android:visibility="gone"
                        app:tint="@color/green"
                        tools:visibility="gone" />
                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/option3Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="false"
                android:focusable="false"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/stroke_card_quiz"
                app:strokeWidth="1dp">

                <FrameLayout
                    android:id="@+id/option3Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvOption3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            tools:text="C. Pilihan 3" />

                        <ImageView
                            android:id="@+id/ivOption3Media"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="8dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/option3"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivOption3Correct"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_checklist"
                        android:visibility="gone"
                        app:tint="@color/green"
                        tools:visibility="visible" />
                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/option4Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/stroke_card_quiz"
                app:strokeWidth="1dp">

                <FrameLayout
                    android:id="@+id/option4Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvOption4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            tools:text="D. Pilihan 4" />

                        <ImageView
                            android:id="@+id/ivOption4Media"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="8dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/option4"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivOption4Correct"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_checklist"
                        android:visibility="gone"
                        app:tint="@color/green"
                        tools:visibility="gone" />
                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
