<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_rounded_corner"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/headerLayout"
                style="@style/GlobalPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/ToolbarTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/add_lesson" />

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/pic_back"
                    android:padding="8dp"
                    android:src="@drawable/ic_close" />
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="24dp"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/GlobalPadding">

                <TextView
                    android:id="@+id/tvUploadCover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Unggah Cover"
                    style="@style/TextAppearance.LearnAble.Regular"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadCover"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/upload_picture"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_upload"
                        app:iconTint="@color/button_blue"
                        app:strokeColor="@color/grey"
                        android:textColor="@color/button_blue"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart"/>

                    <TextView
                        android:id="@+id/tvTitleCoverImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        tools:text="Gambar.png"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvNameLesson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Nama Bab"
                    style="@style/TextAppearance.LearnAble.Regular"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/titleInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/titleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fill_name_lesson"
                        android:inputType="textCapSentences" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvSchoolLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Tingkat Pendidikan"
                    style="@style/TextAppearance.LearnAble.Regular"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/schoolLevelInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <AutoCompleteTextView
                        android:id="@+id/schoolLevelAutoComplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/choose_level"
                        android:inputType="none"
                        android:focusable="false"
                        android:drawableEnd="@drawable/ic_arrow_down" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Mata Pelajaran"
                    style="@style/TextAppearance.LearnAble.Regular"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/subjectInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <AutoCompleteTextView
                        android:id="@+id/subjectAutoComplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/choose_subject"
                        android:inputType="none"
                        android:focusable="false"
                        android:drawableEnd="@drawable/ic_arrow_down" />
                </com.google.android.material.textfield.TextInputLayout>

                
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/GlobalPadding"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_corner"
        android:elevation="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_outline_button"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginEnd="10dp"
            android:textColor="@color/grey"
            app:cornerRadius="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_green"
            android:text="@string/save"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>