<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/icon_dummy_bab"
        android:contentDescription="Header"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="W,3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/headerOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_subject_card"
        app:layout_constraintBottom_toBottomOf="@id/ivHeader"
        app:layout_constraintEnd_toEndOf="@id/ivHeader"
        app:layout_constraintStart_toStartOf="@id/ivHeader" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/pic_back"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tvSubBabTitle"
        style="@style/TextAppearance.LearnAble.SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tvHeaderProgress"
        app:layout_constraintStart_toStartOf="@id/ivHeader"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Matematikaa" />

    <TextView
        android:id="@+id/tvHeaderProgress"
        style="@style/TextAppearance.LearnAble.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/headerProgressBar"
        app:layout_constraintStart_toStartOf="@id/ivHeader"
        tools:text="Selesai 0 dari 8" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/headerProgressBar"
        android:layout_width="150dp"
        android:layout_height="7dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="32dp"
        app:indicatorColor="@color/button_blue"
        app:layout_constraintBottom_toBottomOf="@+id/ivHeader"
        app:layout_constraintStart_toStartOf="@id/ivHeader"
        app:trackColor="@color/white"
        app:trackCornerRadius="100dp"
        tools:progress="50" />

    <TextView
        android:id="@+id/tvChapterCount"
        style="@style/TextAppearance.LearnAble.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivHeader"
        app:layout_constraintEnd_toEndOf="@id/ivHeader"
        tools:text="8 Bab" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScroll"
        style="@style/GlobalPadding"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAllChapter"
                style="@style/TextAppearance.LearnAble.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_subbab"
                android:textColor="@color/grey"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etSearch"
                style="@style/TextAppearance.LearnAble.Light"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_search_pill"
                android:clipToPadding="false"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:drawableTint="@color/text_hint"
                android:elevation="2dp"
                android:hint="@string/search_hint_subject"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingStart="14dp"
                android:paddingEnd="16dp"
                android:singleLine="true"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/grey" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/subbabRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_lesson" />

            <TextView
                android:id="@+id/emptyStateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak ada materi yang tersedia"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/lessonsRecyclerView"
                app:layout_constraintEnd_toEndOf="@+id/lessonsRecyclerView"
                app:layout_constraintStart_toStartOf="@+id/lessonsRecyclerView"
                app:layout_constraintTop_toTopOf="@+id/lessonsRecyclerView" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>