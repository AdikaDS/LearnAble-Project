<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/player_control_background_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/exo_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_arrow_back_white" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextAppearance.LearnAble.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="Video" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/center_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/exo_rew_center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rewind 10s"
            android:src="@drawable/ic_replay_10" />

        <ImageButton
            android:id="@+id/exo_play_center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Play"
            android:src="@drawable/ic_play_arrow_white"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/exo_pause_center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Play"
            android:src="@drawable/ic_pause_white"
            android:visibility="visible" />


        <ImageButton
            android:id="@+id/exo_ffwd_center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Forward 10s"
            android:src="@drawable/ic_forward_10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/player_control_background_bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/exo_play_portrait"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play"
                android:src="@drawable/ic_play_arrow_white"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/exo_pause_portrait"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play"
                android:src="@drawable/ic_pause_white"
                android:visibility="visible" />

            <androidx.media3.ui.DefaultTimeBar
                android:id="@+id/exo_progress_potrait"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                app:buffered_color="@color/player_buffered_color"
                app:played_color="@color/player_played_color"
                app:scrubber_color="@color/player_scrubber_color"
                app:unplayed_color="@color/player_unplayed_color" />

            <TextView
                android:id="@+id/exo_duration_potrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="00:00" />


            <ImageButton
                android:id="@+id/screen_size_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Screen Size"
                android:src="@drawable/ic_fullscreen" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_controls_landscape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/player_control_background_bottom"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exo_position_landscape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <androidx.media3.ui.DefaultTimeBar
                android:id="@+id/exo_progress_landscape"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                app:buffered_color="@color/player_buffered_color"
                app:played_color="@color/player_played_color"
                app:scrubber_color="@color/player_scrubber_color"
                app:unplayed_color="@color/player_unplayed_color" />

            <TextView
                android:id="@+id/exo_duration_landscape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/exo_play_landscape"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play"
                android:src="@drawable/ic_play_arrow_white"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/exo_pause_landscape"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Pause"
                android:src="@drawable/ic_pause_white" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/pip_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Screen Size"
                android:src="@drawable/ic_picture_in_picture" />


            <ImageButton
                android:id="@+id/language_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Language"
                android:src="@drawable/ic_subtitles" />


        </LinearLayout>
    </LinearLayout>

</FrameLayout>

