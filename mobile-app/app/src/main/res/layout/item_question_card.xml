<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="12dp"
    app:strokeColor="@color/grey"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMC"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_outline_button"
                    android:text="@string/multiple_choice"
                    android:textAllCaps="false"
                    android:textColor="@color/button_blue"
                    app:backgroundTint="@color/button_blue" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEssay"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_outline_button"
                    android:text="@string/essay"
                    android:textAllCaps="false"
                    android:textColor="@color/grey"
                    app:backgroundTint="@color/grey" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Delete"
                android:padding="8dp"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/layoutMC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQuestionMC"
                style="@style/TextAppearance.LearnAble.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/grey"
                android:textSize="14sp"
                tools:text="Pertanyaan" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilQuestionMC"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQuestionMC"
                        style="@style/TextAppearance.LearnAble.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|start"
                        android:hint="@string/fill_question"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="10"
                        android:minHeight="50dp"
                        android:minLines="1"
                        android:paddingStart="14dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/btnAttachQuestionMC"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:contentDescription="Attach"
                    android:src="@drawable/ic_image" />

                <ImageView
                    android:id="@+id/ivDoneQuestionMCAttach"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:contentDescription="Correct answer"
                    android:src="@drawable/ic_correct"
                    android:visibility="visible" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroupOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioOption1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@drawable/radio_button_selector" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOption1"
                        style="@style/TextAppearance.LearnAble.Regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_search_pill"
                        android:gravity="top|start"
                        android:hint="@string/option1"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="5"
                        android:minHeight="46dp"
                        android:minLines="1"
                        android:paddingStart="14dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnAttachOption1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Attach"
                            android:src="@drawable/ic_image" />

                        <ImageView
                            android:id="@+id/ivCorrectOption1"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:contentDescription="Correct answer"
                            android:src="@drawable/ic_correct"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioOption2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@drawable/radio_button_selector" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOption2"
                        style="@style/TextAppearance.LearnAble.Regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_search_pill"
                        android:gravity="top|start"
                        android:hint="@string/option2"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="5"
                        android:minHeight="46dp"
                        android:minLines="1"
                        android:paddingStart="14dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnAttachOption2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Attach"
                            android:src="@drawable/ic_image" />

                        <ImageView
                            android:id="@+id/ivCorrectOption2"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:contentDescription="Correct answer"
                            android:src="@drawable/ic_correct"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioOption3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@drawable/radio_button_selector" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOption3"
                        style="@style/TextAppearance.LearnAble.Regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_search_pill"
                        android:gravity="top|start"
                        android:hint="@string/option3"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="5"
                        android:minHeight="46dp"
                        android:minLines="1"
                        android:paddingStart="14dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnAttachOption3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Attach"
                            android:src="@drawable/ic_image" />

                        <ImageView
                            android:id="@+id/ivCorrectOption3"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:contentDescription="Correct answer"
                            android:src="@drawable/ic_correct"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioOption4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@drawable/radio_button_selector" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOption4"
                        style="@style/TextAppearance.LearnAble.Regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_search_pill"
                        android:gravity="top|start"
                        android:hint="@string/option4"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="5"
                        android:minHeight="46dp"
                        android:minLines="1"
                        android:paddingStart="14dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnAttachOption4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Attach"
                            android:src="@drawable/ic_image" />

                        <ImageView
                            android:id="@+id/ivCorrectOption4"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:contentDescription="Correct answer"
                            android:src="@drawable/ic_correct"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </RadioGroup>

            <TextView
                style="@style/TextAppearance.LearnAble.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/note_correct_answer"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/tvExplanationMCQuestion"
                style="@style/TextAppearance.LearnAble.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/grey"
                android:textSize="14sp"
                tools:text="Penjelasan Soal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMCExplanation"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMCExplanation"
                        style="@style/TextAppearance.LearnAble.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|start"
                        android:hint="@string/fill_explanation_answer"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="10"
                        android:minHeight="50dp"
                        android:minLines="1"
                        android:paddingStart="14dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/btnAttachMCExplanation"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:contentDescription="Attach"
                    android:src="@drawable/ic_image" />

                <ImageView
                    android:id="@+id/ivDoneQuestionExplanationMCAttach"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:contentDescription="Correct answer"
                    android:src="@drawable/ic_correct"
                    android:visibility="visible" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEssay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvQuestionEssay"
                style="@style/TextAppearance.LearnAble.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/grey"
                android:textSize="14sp"
                tools:text="Pertanyaan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilQuestionEssay"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQuestionEssay"
                        style="@style/TextAppearance.LearnAble.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|start"
                        android:hint="@string/fill_question"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="10"
                        android:minHeight="50dp"
                        android:minLines="1"
                        android:paddingStart="14dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/btnAttachQuestionEssay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:contentDescription="Attach"
                    android:src="@drawable/ic_image" />

                <ImageView
                    android:id="@+id/ivDoneQuestionEssayAttach"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:contentDescription="Correct answer"
                    android:src="@drawable/ic_correct"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/tvExplanationEssayQuestion"
                style="@style/TextAppearance.LearnAble.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/grey"
                android:textSize="14sp"
                tools:text="Penjelasan Soal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEssayExplanation"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEssayExplanation"
                        style="@style/TextAppearance.LearnAble.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|start"
                        android:hint="@string/fill_explanation_answer"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="10"
                        android:minHeight="50dp"
                        android:minLines="1"
                        android:paddingStart="14dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/btnAttachEssayExplanation"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:contentDescription="Attach"
                    android:src="@drawable/ic_image" />

                <ImageView
                    android:id="@+id/ivDoneQuestionExplanationEssayAttach"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:contentDescription="Correct answer"
                    android:src="@drawable/ic_correct"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

