<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:backgroundTint="@color/white"
    android:elevation="8dp"
    android:foregroundGravity="center"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.LearnAble.Dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="22dp">

        <FrameLayout
            android:id="@+id/bgIv"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_circle_soft_red">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_logout" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextAppearance.LearnAble.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout_account"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="@string/logout_account_desc"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnYes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_red"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/studentSection" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_grey"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/studentSection" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
